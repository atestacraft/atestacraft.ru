// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PlayerRoles {
  player
  op
}

model Player {
  nickname  String      @id @unique
  role      PlayerRoles @default(player)
  sessions  Session[]
  locations Location[]
}

model Session {
  id         Int      @id @default(autoincrement())
  code       Int
  ip_address String
  created_at DateTime @default(now())

  player   Player @relation(fields: [nickname], references: [nickname])
  nickname String
}

enum HeadTags {
  mob
  block
  decor
  eat
  other
}

model Head {
  nickname   String   @id @unique
  title      String
  tag        HeadTags
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

enum LocationWorld {
  overworld
  nether
  end
}

model Location {
  id         Int           @id @default(autoincrement())
  title      String
  url        String        @unique
  x          Int
  y          Int
  z          Int
  world      LocationWorld
  created_at DateTime      @default(now())

  player   Player @relation(fields: [nickname], references: [nickname])
  nickname String
}
